<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.meng0028.mad9014final" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MENG0028</name>
    <description>
        MAD9014 Final Project
    </description>
    <author email="meng0028@algonquinlive.com" href="http://cordova.io">
        Yanming Meng
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="https://grifs.edumedia.ca/*"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <icon scr="res/android/icon/mdpi_icon.png" density="mdpi"/>
        <icon scr="res/android/icon/hdpi_icon.png" density="hdpi"/>
        <icon scr="res/android/icon/xhdpi_icon.png" density="xhdpi"/>
        <icon scr="res/android/icon/xxhdpi_icon.png" density="xxhdpi"/>
        <icon scr="res/android/icon/xxxhdpi_icon.png" density="xxxhdpi"/>
        
        <splash src="res/android/splashscreen/mdpi_screen_l.png" density="land-mdpi"/>
        <splash src="res/android/splashscreen/hdpi_screen_l.png" density="land-hdpi"/>
        <splash src="res/android/splashscreen/xhdpi_screen_l.png" density="land-xhdpi"/>
        <splash src="res/android/splashscreen/xxhdpi_screen_l.png" density="land-xxhdpi"/>
        <splash src="res/android/splashscreen/xxxhdpi_screen_l.png" density="land-xxxhdpi"/>
        
        <splash src="res/android/splashscreen/mdpi_screen_p.png" density="port-mdpi"/>
        <splash src="res/android/splashscreen/hdpi_screen_p.png" density="port-hdpi"/>
        <splash src="res/android/splashscreen/xhdpi_screen_p.png" density="port-xhdpi"/>
        <splash src="res/android/splashscreen/xxhdpi_screen_p.png" density="port-xxhdpi"/>
        <splash src="res/android/splashscreen/xxxhdpi_screen_p.png" density="port-xxxhdpi"/>
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AutoHideSplashScreen" value="true"/>
    <preference name="splashScreenDelay" value="2000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirsTime" value= "false" />
</widget>
